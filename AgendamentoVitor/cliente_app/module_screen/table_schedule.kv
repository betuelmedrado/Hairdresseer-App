
# The table of hours
<Table_shedule>:
    id_button:''
    id_schedule:''
    hours:''
    hours_2:''
    client:''
    size_hint_y:None
    height:'100dp'
    MDCard:
        ripple_behavior:True
        md_bg_color:1,1,1,1
        radius:5,5,5,5
        id:card
        on_release: app.root.get_screen('viewshedule').get_hours(root.id_button, root.hours)
        MDBoxLayout:
            size_hint_x:None
            width:'40dp'
            orientation:'vertical'
            MDLabel:
                text:root.hours
                color:0,0,0,1
            MDLabel:
                color:0,0,0,1
                text:root.hours_2
        MDLabel:
            text:root.client
            bold:True
            color:0,0,0,1

<Table_block>:
    id_button:''
    id_schedule:''
    hours:''
    hours_2:''
    client:''
    size_hint_y:None
    height:'100dp'
    MDCard:
        ripple_behavior:True
        md_bg_color:.2,0,0,.3
        radius:5,5,5,5
        id:card
#        on_release: app.root.get_screen('viewshedule').get_hours(root.id_button, root.hours)
        MDBoxLayout:
            orientation:'vertical'
            size_hint_x:None
            width:'70dp'
            MDLabel:
                text:root.hours
                color:0,0,0,1
            MDLabel:
                color:0,0,0,1
                text:root.hours_2
        MDLabel:
            text:root.client
            bold:True
            color:0,0,0,1
