
<Register>:
    canvas:
        Color:
            rgba:1,1,1,.7
        Rectangle:
            pos:root.pos
            size:root.size
            source:'images/degrade.jpg'
    FloatLayout:
        MDBoxLayout:
            orientation:'vertical'
            size_hint:.8, None
            height:'150dp'
            pos_hint:{'center_x':.5, 'center_y':.6}
            spacing:'20dp'
            MDLabel:
                font_size:'15dp'
                text:'Email'
                color:1,1,1,.4
            TextInput:
                size_hint_y:None
                height:'40dp'
                multiline:False
                hint_text:'Email'
                font_size:'20sp'
                id:email
            MDLabel:
                font_size:'15dp'
                text:'Senha'
                color:1,1,1,.4
            TextInput:
                size_hint_y:None
                height:'40dp'
                hint_text:'******'
                bold:True
                font_size:'30dp'
                multiline:False
                password:True
                foreground_color:0,1,1,1
                id:senha
            Widget:
                size_hint_y:None
                height:'15dp'
            Label:
                text:'Faça o seu cadastro'
                font_size:'25sp'
                markup:True
                color:1,1,1,1
                id:warning
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'60sp'
            pos_hint:{'center_x':.5,'center_y':.32}
            md_bg_color:0.13, 0.59, 0.95,1
            radius:'20dp','5dp','20dp','5dp'
            ripple_behavior:True
            padding:'10sp'
            on_release:root.logar()
            Label:
#                size_hint_y:None
#                height:'15dp'
                text:'Faser'
            Label:
                size_hint_y:None
                height:'25dp'
                bold:True
                font_size:'25dp'
                text:'Login'
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'60sp'
            pos_hint:{'center_x':.5,'center_y':.2}
            ripple_behavior:True
            md_bg_color:0.16, 0.50, 0.73,1
            radius:'20dp','5dp','20dp','5dp'
            padding:'10sp'
            on_release:app.root.current = 'creatbill'
            Label:
                bold:True
                font_size:'25dp'
                text:'Criar'
            Label:
                font_size:'10dp'
                text:'Conta'
    MDTextButton:
        text:'Redefinir senha!'
        color:1,1,1,.6
        pos_hint:{'right':.9}
        on_release:app.root.current = 'redefinitionsenha'

<CreatBill>:
    canvas:
        Color:
            rgba:1,1,1,.4
        Rectangle:
            pos:root.pos
            size:root.size
            source:'images/degrade.jpg'
    FloatLayout:
        MDBoxLayout:
            size_hint:.8,None
            height:'200dp'
            orientation:'vertical'
            spacing:'10dp'
            pos_hint:{'center_x':.5, 'top':.75}
            MDLabel:
                size_hint_y:None
                height:'15dp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'Nome'
            TextInput:
                size_hint_y:None
                height:'40dp'
                hint_text:'Nome'
                id:nome
                multiline:False
            MDLabel:
                size_hint_y:None
                height:'15dp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'Email'
            TextInput:
                size_hint_y:None
                height:'40dp'
                hint_text:'Email'
                multiline:False
                id:email
            MDLabel:
                size_hint_y:None
                height:'15dp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'CPF'
            TextInput:
                size_hint_y:None
                height:'40dp'
                hint_text:'CPF'
                multiline:False
                id:cpf

            MDLabel:
                size_hint_y:None
                height:'15dp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'Senha'
            TextInput:
                size_hint_y:None
                height:'40dp'
                font_size:'30dp'
                bold:True
                hint_text:'******'
                foreground_color:0,1,1,1
                multiline:False
                password:True
                id:senha
            MDLabel:
                size_hint_y:None
                height:'15sp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'Confirmar Senha'
            TextInput:
                size_hint_y:None
                height:'40dp'
                font_size:'30dp'
                bold:True
                hint_text:'******'
                multiline:False
                foreground_color:0,1,1,1
                password:True
                id:rep_senha

        Label:
            text:'Faça o seu cadastro'
            font_size:'20sp'
            markup:True
            pos_hint:{'center_x':.5,'center_y':.45}
            color:1,1,1,1
            id:warning
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'60sp'
            pos_hint:{'center_x':.5,'center_y':.2}
            ripple_behavior:True
            md_bg_color:0.16, 0.50, 0.73,1
            radius:'20dp','5dp','20dp','5dp'
            padding:'10sp'
            on_release:root.creat_bill()
#            on_release:root.valid_field()
            Label:
                bold:True
                font_size:'25dp'
                text:'Criar'
            Label:
                size_hint_y:None
                height:'10dp'
                font_size:'10dp'
                text:'Conta'
        MDIconButton:
            icon:'arrow-left-thick'
            on_release:app.root.current = 'register'
