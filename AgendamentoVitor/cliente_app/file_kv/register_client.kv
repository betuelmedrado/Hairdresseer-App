
<Register>:
    canvas:
        Color:
            rgba:1,1,1,.7
        Rectangle:
            pos:root.pos
            size:root.size
            source:'images/degrade.jpg'
    FloatLayout:
        MDBoxLayout:
            orientation:'vertical'
            size_hint:.8, None
            height:'150dp'
            pos_hint:{'center_x':.5, 'center_y':.6}
            spacing:'20dp'
            MDBoxLayout:
                size_hint_y:None
                height:'200dp'
                Image:
                    source:'images/barbershop.png'
            MDLabel:
                font_size:'15dp'
                text:'Email'
                color:1,1,1,.4
            TextInput:
                size_hint_y:None
                height:'40dp'
                multiline:False
                hint_text:'Email'
                font_size:'20sp'
                id:email
            MDLabel:
                font_size:'15dp'
                text:'Senha'
                color:1,1,1,.4
            MDBoxLayout:
                size_hint_y:None
                height:'40dp'
                TextInput:
                    hint_text:'******'
                    bold:True
                    font_size:'30dp'
                    multiline:False
                    password:True
                    foreground_color:0,1,1,1
                    id:senha
                FloatLayout:
                    size_hint_x:None
                    width:0
                    MDIconButton:
                        icon:'eye-off'
                        pos_hint:{'right':.8, 'center_y':.5}
                        id:eye
                        on_release:root.password_view(senha)

            Widget:
                size_hint_y:None
                height:'15dp'
            MDLabel:
                text:''
                font_size:'25sp'
                markup:True
                halign:'center'
                color:1,1,1,1
                id:warning
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'60sp'
            pos_hint:{'center_x':.5,'center_y':.32}
            md_bg_color:0.13, 0.59, 0.95,1
            radius:'20dp','5dp','20dp','5dp'
            ripple_behavior:True
            padding:'10sp'
            on_release:root.logar()
            Label:
#                size_hint_y:None
#                height:'15dp'
                text:'Faser'
            Label:
                size_hint_y:None
                height:'25dp'
                bold:True
                font_size:'25dp'
                text:'Login'
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'60sp'
            pos_hint:{'center_x':.5,'center_y':.2}
            ripple_behavior:True
            md_bg_color:0.16, 0.50, 0.73,1
            radius:'20dp','5dp','20dp','5dp'
            padding:'10sp'
            on_release:app.root.current = 'creatbill'
            Label:
                bold:True
                font_size:'25dp'
                text:'Criar'
            Label:
#                font_size:'10dp'
                text:'Conta'
        MDTextButton:
            text:'Redefinir senha!'
            color:1,1,1,.6
            pos_hint:{'right':.9, 'y':.05}
            on_release:app.root.current = 'redefinitionsenha'


