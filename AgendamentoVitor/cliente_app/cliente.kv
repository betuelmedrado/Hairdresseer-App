<HomePage>:
    canvas:
        Rectangle:
            size:root.size
            pos:root.pos
            source:'images/wallpaper.png'
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            title:'Sejam bem vindos'
            specific_text_color:0,0,0,1
            left_action_items:[['account-arrow-left-outline', lambda x: root.return_login()]]
            right_action_items:[['help-circle', lambda x: root.help()], ['menu', lambda x:nav_drawer.set_state('open')]]

#        Widget:
#            size_hint_y:.10
        MDBoxLayout:
            size_hint_y:.12
            md_bg_color:0,0,0,.5
            MDLabel:
                text:'Escolha o proficional de sua preferencia!'
                outline_width:1
                outline_color:0,0,0,1
                color:0.13, 0.59, 0.95,1
                bold:True
                halign:'center'
                font_size:'20sp'
        Widget:
            size_hint_y:None
            height:'60dp'
        ScrollView:
#            FloatLayout:
            spacing:'20dp'
            MDBoxLayout:
                pos_hint:{'center_x':.5,'center_y':.5}
                spacing:'15dp'
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height
                id:my_card_button
    MDBoxLayout:
        size_hint_y:None
        height:'40dp'
        MDLabel:
            size_hint_x:None
            width:'45dp'
            text:'Local:'
            color:1,1,1,.5
        MDLabel:
            font_size:'11dp'
            color:1,1,1,1
            id:rua

        MDLabel:
            size_hint_x:None
            width:'30dp'
            text:'N°:'
            color:1,1,1,.5
        MDLabel:
            size_hint_x:None
            width:'50dp'
            font_size:'11dp'
            color:1,1,1,1
            id:num

    MDNavigationLayout:

        MDNavigationDrawer:
            orientation:"vertical"
            id: nav_drawer
            state:'close'
            MDBoxLayout:
                orientation:'vertical'
                size_hint_y:None
                height:'250dp'
                md_bg_color:0,0,0,.2
                FloatLayout:
                    Image:
                        source:'images/barbershop.png'
                        pos_hint:{'center_x':.5, 'center_y':.5}
                    MDLabel:
                        font_size:'30sp'
                        bold:True
                        text:'BarberShop'
                        outline_width:'3dp'
                        outline_color:1,1,1,1
                        pos_hint:{'x':.05, 'center_y':.1}
                    MDLabel:
                        font_size:'30sp'
                        bold:True
                        text:'299'
                        outline_width:'3dp'
                        outline_color:1,1,1,1
                        pos_hint:{'x':.8, 'center_y':.1}
            MDBoxLayout:
                orientation:'vertical'
                spacing:'15dp'
                padding:('10dp',0,'5dp',0)
                MDSeparator:
                    md_bg_color:0.53, 0.54, 0.56,1
                MDBoxLayout:
                    size_hint_y:None
                    height:'60dp'
                MDSeparator:
                    md_bg_color:0.53, 0.54, 0.56,1

                MDCard:
                    size_hint_y:None
                    height:'60dp'
                    padding:('20dp',0,0,0)
                    ripple_behavior:True
                    on_release:app.root.current = 'perfil'
    #                on_press:nav_drawer.set_state('close')
                    MDIcon:
                        size_hint_x:None
                        width:'60dp'
                        icon_size:'200dp'
                        icon:'account'
                        pos_hint:{'center_y':.5}
                    MDLabel:
                        text:'Perfil'
                        font_size:'25sp'
                MDCard:
                    size_hint_y:None
                    height:'60dp'
                    padding:('20dp',0,0,0)
                    ripple_behavior:True
                    on_release:app.root.current = 'drawerinfoschedule'

                    MDIcon:
                        size_hint_x:None
                        width:'60dp'
                        icon_size:'200dp'
                        icon:'information'
                        pos_hint:{'center_y':.5}
                    MDLabel:
                        text:'informação do agendamento!'

                Widget:
                MDLabel:
                    size_hint_y:None
                    height:'0dp'
                    text:'Developer: Betuel M. Araujo'
                    color:0,0,0,.5
                MDLabel:
                    size_hint_y:None
                    height:'2dp'
                    text:'Email: betobmx360@gmail.com'
                    color:0,0,0,.5
                Widget:
                    size_hint_y:None
                    height:'5dp'


<ViewSchedule>:
    canvas:
        Rectangle:
            size:root.size
            pos:root.pos
            source:'images/wallp_schedule.jpg'
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
#            elevation:10
            id:title_toobar
            left_action_items:[['arrow-left-bold', lambda x: root.return_homepage()]]
            right_action_items:[['refresh',lambda x: root.actualizar()]]

    #    Button:
    #        size_hint:None,None
    #        width:'100dp'
    #        height:'40dp'
    #        text:'insert'
    #        on_release:root.actualizar()
        MDBoxLayout:
            size_hint:1,.7
            md_bg_color:0,0,0,.4
            pos_hint:{'center_x':.5}
            MDScrollViewRefreshLayout:
                id:refresh_id
                refresh_callback: root.refresh_callback
                root_layout: root
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:self.minimum_height
                    spacing:'11dp'
                    padding:'11dp'
                    id:grid_shedule
