
#:include register_client.kv


<Manager>:
#    HoursSchedule:
#        name:'hoursschedule'
    Register:
        name:'register'
    CreatBill:
        name:'creatbill'
    HomePage:
        name:'homepage'
    ViewSchedule:
        name:'viewshedule'
    HoursSchedule:
        name:'hoursschedule'


<HomePage>:
    canvas:
        Rectangle:
            size:root.size
            pos:root.pos
            source:'images/wallpaper.png'
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            markup:True
            title:'Seja bem vindo'
            specific_text_color:0,0,0,1
            left_action_items:[['account-arrow-left-outline', lambda x: root.return_login()]]
        ScrollView:
#            FloatLayout:
            MDBoxLayout:
                pos_hint:{'center_x':.5,'center_y':.5}
                spacing:'15dp'
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height
                id:my_card_button
    MDBoxLayout:
        size_hint_y:None
        height:'40dp'
        MDLabel:
            size_hint_x:None
            width:'45dp'
            text:'Local:'
            color:1,1,1,.5
        MDLabel:
            font_size:'11dp'
            color:1,1,1,1
            id:rua

        MDLabel:
            size_hint_x:None
            width:'30dp'
            text:'N°:'
            color:1,1,1,.5
        MDLabel:
            size_hint_x:None
            width:'50dp'
            font_size:'11dp'
            color:1,1,1,1
            id:num


<ViewSchedule>:
    canvas:
        Rectangle:
            size:root.size
            pos:root.pos
            source:'images/wallp_schedule.jpg'
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            elevation:10
            id:title_toobar
            right_action_items:[['refresh',lambda x: root.actualizar()]]
            left_action_items:[['arrow-left-bold-outline', lambda x: root.return_homepage()]]

    #    Button:
    #        size_hint:None,None
    #        width:'100dp'
    #        height:'40dp'
    #        text:'insert'
    #        on_release:root.actualizar()
        MDBoxLayout:
            size_hint:1,.7
            md_bg_color:0,0,0,.4
            pos_hint:{'center_x':.5}
            ScrollView:
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:self.minimum_height
                    spacing:'11dp'
                    padding:'11dp'
                    id:grid_shedule
#<spim>:
#    size_hint: None, None
