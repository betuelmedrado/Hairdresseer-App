

<ManagerProfile>:
    ScrollView:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:None
            height:self.minimum_height
            orientation:'vertical'
            md_bg_color:0.53, 0.54, 0.56, .4
            MDBoxLayout:
                size_hint_y:None
                height:'60dp'
                md_bg_color:0.13, 0.53, 0.95,1
                MDIconButton:
                    icon:'arrow-left-bold-outline'
                    color:1,1,1,1
                    on_release:app.root.current = 'homepage'
                MDLabel:
                    size_hint_x:None
                    width:'200dp'
                    color:1,1,1,1
                    font_size:'25dp'
                    bold:True
                    halign:'center'
                    text:'Crie seu perfil'
                Widget:
                MDIconButton:
                    icon:'refresh'
                    on_release:root.infill()

            Widget:
                size_hint_y:None
                height:'10dp'
            MDCard:
                orientation:'vertical'
                size_hint:.8,None
                height:'290dp'
                radius:12,12,12,12
                pos_hint:{'center_x':.5}
                spacing:'10dp'
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:'60dp'
                    pos_hint:{'center_x':.5,'center_y':.8}
                    spacing:'4dp'
                    MDLabel:
                        size_hint_y:None
                        height:'30dp'
                        pos_hint:{'center_x':.5}
                        bold:True
                        color:1,.5,.5,1
                        font_size:'30dp'
                        id:text_name

                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:'35dp'
                    spacing:'10dp'
                    MDLabel:
                        size_hint_y:None
                        height:'5dp'
                        font_size:'8dp'
                        text:'Celecione os dias que vai receber esses horário!'
                    MDBoxLayout:
#                        size_hint_y:None
#                        height:'30dp'
                        spacing:'10dp'
                        pos_hint:{'center_x':.5}
                        ToggleButton:
                            text:'D'
                            dia:'7'
                            bold:True
                            color:1,0,0,1
                            background_color:0.35, 0.42, 0.49, .5
                            id:sunday
                            on_state:root.insert_day(self.state, self.dia)
                        ToggleButton:
                            text:'S'
                            dia:'1'
                            bold:True
                            color:1,1,1,1
                            background_color:0.35, 0.42, 0.49, .5
                            id:monday
                            on_state:root.insert_day(self.state, self.dia)
                        ToggleButton:
                            text:'T'
                            dia:'2'
                            bold:True
                            color:1,1,1,1
                            background_color:0.35, 0.42, 0.49, .5
                            id:tuesday
                            on_state:root.insert_day(self.state, self.dia)
                        ToggleButton:
                            text:'Q'
                            dia:'3'
                            bold:True
                            color:1,1,1,1
                            background_color:0.35, 0.42, 0.49, .5
                            id:wednesday
                            on_state:root.insert_day(self.state, self.dia)
                        ToggleButton:
                            text:'Q'
                            dia:'4'
                            bold:True
                            color:1,1,1,1
                            background_color:0.35, 0.42, 0.49, .5
                            id:thursday
                            on_state:root.insert_day(self.state, self.dia)
                        ToggleButton:
                            text:'S'
                            dia:'5'
                            bold:True
                            color:1,1,1,1
                            background_color:0.35, 0.42, 0.49, .5
                            id:friday
                            on_state:root.insert_day(self.state, self.dia)
                        ToggleButton:
                            text:'S'
                            dia:'6'
                            bold:True
                            color:1,1,1,1
                            background_color:0.35, 0.42, 0.49, .5
                            id:saturday
                            on_state:root.insert_day(self.state, self.dia)

                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:'60dp'
                    spacing:'11dp'
                    pos_hint:{'center_x':.5,'center_y':.67}
                    MDBoxLayout:
                        MDLabel:
                            font_size:'9dp'
                            text:'Entrada do serviço'
                        MDLabel:
                            font_size:'9dp'
                            text:'Horas'
                            halign:'center'
                        MDLabel:
                            font_size:'9dp'
                            halign:'right'
                            text:'saida do serviço'
                    MDBoxLayout:
                        MDTextFieldRect:
                            size_hint_x:None
                            width:'50dp'
                            hint_text:'00:00'
                            on_focus:root.validate('entry')
                            id:entry
                        MDBoxLayout:
                            size_hint_y:None
                            height:'50dp'
                            pos_hint:{'center_y':.5}
                            ScrollView:
                                MDBoxLayout:
                                    orientation:'vertical'
                                    size_hint_y:None
                                    height:self.minimum_height
                                    id:hours
                        MDTextFieldRect:
                            size_hint_x:None
                            width:'50dp'
    #                        pos_hint:{'center_x':.9}
                            hint_text:'00:00'
                            on_focus:root.validate('exit')
                            id:exit
                Widget:
                    size_hint_y:None
                    height:'10dp'

                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:'70dp'
                    spacing:'10dp'
                    Label:
                        font_size:'9dp'
                        text:'Informe o tempo entre cada agenda'
                        color:0,0,0,1
                    MDCard:
                        size_hint_y:None
                        height:'30dp'
                        spacing:'10dp'
                        padding:['20dp','5dp']
                        MDTextFieldRect:
                            size_hint_y:None
                            height:'25dp'
                            readonly:True
                            pos_hint:{'center_x':.5}
                            text:'00:30'
                            on_focus:space_temp.text = self.text
                        MDTextFieldRect:
                            size_hint_y:None
                            height:'25dp'
                            readonly:True
                            pos_hint:{'center_x':.5}
                            text:'00:40'
                            on_focus:space_temp.text = self.text
                        MDTextFieldRect:
                            size_hint_y:None
                            height:'25dp'
                            readonly:True
                            pos_hint:{'center_x':.5}
                            text:'00:50'
                            on_focus:space_temp.text = self.text
                        MDTextFieldRect:
                            size_hint_y:None
                            height:'25dp'
                            readonly:True
                            pos_hint:{'center_x':.5}
                            text:'00:60'
                            on_focus:space_temp.text = self.text
                    MDTextButton:
                        size_hint:None,None
                        width:'50dp'
                        height:'25dp'
#                        readonly:True
                        bold:True
                        color:1,0,0,.5
                        pos_hint:{'center_x':.5}
                        id:space_temp
                MDBoxLayout:
                    size_hint_y:None
                    height:'30dp'
                    pos_hint:{'center_x':.5}
                    MyButtonCard:
                        first_text:'Salvar'
                        secound_text:'Horas'
                        on_release:app.root.get_screen('managerprofile').save_data()
            Widget:
                size_hint_y:None
                height:'15dp'
            MDSeparator:
                size_hint_x:.9
                pos_hint:{'center_x':.5}
            Widget:
                size_hint_y:None
                height:'15dp'
            MDBoxLayout:
                orientation:'vertical'
                size_hint:.7,None
                height:'270dp'
                spacing:'10dp'
                pos_hint:{'center_x':.5,'center_y':.3}
                MDLabel:
                    size_hint_y:None
                    height:'30dp'
                    halign:'center'
                    bold:True
                    font_size:'15dp'
                    markup:True
                    text:'Adicione seus tipo de serviços\n[size=18]Adicione quanto serviços for nessesario[/size]'
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:'100dp'
                    spacing:'10dp'#
                    MDTextField:
                        size_hint_y:None
                        height:'30dp'
                        mode:'rectangle'
                        hint_text:'Nome do serviço'
                        text_color_normal:1,0,0,1
                        id:nome_servico
                    MDBoxLayout:
                        spacing:'20dp'
                        MDBoxLayout:
                            orientation:'vertical'
                            spacing:'4dp'
                            MDLabel:
                                text:'Tempo'
                                bold:True
                                font_size:'10dp'
                            TextInput:
                                size_hint_y:None
                                height:'30dp'
                                hint_text:'00:00'
                                multiline:False
                                on_text:root.on_text_temp()
                                on_focus:root.un_focus()
                                id:tempo
                        MDBoxLayout:
                            orientation:'vertical'
                            spacing:'4dp'
                            MDLabel:
                                bold:True
                                font_size:'10dp'
                                text:'Valor:'
                            TextInput:
                                size_hint_y:None
                                height:'30dp'
                                hint_text:'R$:'
                                multiline:False
                                on_focus:root.on_valor()
                                id:valor
                MyButtonCard:
                    first_text:'Adicionar'
                    secound_text:'serviço'
                    on_release:app.root.get_screen('managerprofile').save_servicos()

                MDCard:
                    md_bg_color:0.78, 0.80, 0.83,1
                    radius:8,8,8,8
                    MDCard:
                        orientation:'vertical'
                        size_hint:None,None
                        width:self.parent.width - 10
                        height:self.parent.height - 10
                        radius:8,8,8,8
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':.5}
                        MDBoxLayout:
                            size_hint_y:None
                            height:'10dp'
                            MDLabel:
                                size_hint_x:.40
                                font_size:'10dp'
                                bold:True
                                color:0,0,0,.5
                                text:'Serviços'
                            MDLabel:
                                size_hint_x:.40
                                font_size:'10dp'
                                bold:True
                                color:0,0,0,.5
                                text:'Tempo'
                            MDLabel:
                                size_hint_x:.20
                                font_size:'10dp'
                                bold:True
                                color:0,0,0,.5
                                text:'ValorR$'
                        MDBoxLayout:
                            ScrollView:
                                MDBoxLayout:
                                    orientation:'vertical'
                                    size_hint_y:None
                                    height:self.minimum_height
                                    id:categorie

            Widget:
                size_hint_y:None
                height:'15dp'
            MDSeparator:
                size_hint_x:.9
                pos_hint:{'center_x':.5}
            Widget:
                size_hint_y:None
                height:'15dp'

            Label:
                text:'Informe a localização do salão!'
                bold:True
                color:0,0,0,.4
            Widget:
                size_hint_y:None
                height:'15dp'
            MDBoxLayout:
                size_hint:.7,None
                height:'100dp'
                pos_hint:{'center_x':.5}
                id:box_local
                MDCard:
                    orientation:'vertical'
                    radius:8,8,8,8
                    padding:'20dp'
                    spacing:'10dp'
                    MDTextFieldRect:
                        hint_text:'Local:'
                        multiline:False
                        id:rua
                    MDBoxLayout:
                        spacing:'10dp'
                        MDTextFieldRect:
                            size_hint_x:None
                            width:'70dp'
                            hint_text:'N°:'
                            multiline:False
                            id:number
                        MyButtonCard:
                            first_text:'Inserir'
                            on_release:root.insert_local()



            Widget:
                size_hint_y:None
                height:'15dp'
            MDSeparator:
                size_hint_x:.9
                pos_hint:{'center_x':.5}
            Widget:
                size_hint_y:None
                height:'15dp'
            Widget:
            MDCard:
                size_hint:.7,None
                height:'100dp'
                pos_hint:{'center_x':.5}
                md_bg_color:0.78, 0.80, 0.83,1
                radius:8,8,8,8
                MDCard:
                    orientation:'vertical'
                    size_hint:None,None
                    width:self.parent.width - 10
                    height:self.parent.height - 10
                    radius:8,8,8,8
                    halign:'center'
                    pos_hint:{'center_x':.5,'center_y':.5}
                    MDBoxLayout:
                        size_hint_y:None
                        height:'10dp'
                        MDLabel:
                            size_hint_x:.40
                            font_size:'10dp'
                            bold:True
                            color:1,0,0,.7
                            text:' Socios!'
                    MDBoxLayout:
                        ScrollView:
                            MDBoxLayout:
                                orientation:'vertical'
                                size_hint_y:None
                                height:self.minimum_height
                                id:box_socio


            Widget:
                size_hint_y:None
                height:'15dp'