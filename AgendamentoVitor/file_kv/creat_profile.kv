

<CreatProfile>:
    canvas:
        Color:
            rgba:1,1,1,.4
        Rectangle:
            pos:root.pos
            size:root.size
            source:'images/degrade.jpg'
    FloatLayout:
        MDBoxLayout:
            size_hint:.8,None
            height:'220dp'
            orientation:'vertical'
            spacing:'10dp'
            pos_hint:{'center_x':.5, 'center_y':.7}
            MDLabel:
                size_hint_y:None
                height:'12dp'
                font_size:'12dp'
                color:1,1,1,.5
                text:'Nome'
            TextInput:
                hint_text:'Nome'
                id:nome
            MDLabel:
                size_hint_y:None
                height:'12dp'
                font_size:'12dp'
                color:1,1,1,.5
                text:'Email'
            TextInput:
                hint_text:'Email'
                id:email
            MDLabel:
                size_hint_y:None
                height:'12dp'
                font_size:'12dp'
                color:1,1,1,.5
                text:'Senha'
            TextInput:
                hint_text:'Senha'
                id:senha
            MDLabel:
                size_hint_y:None
                height:'12dp'
                font_size:'12dp'
                color:1,1,1,.5
                text:'Repitir senha'
            TextInput:
                hint_text:'Repetir senha'
                id:rep_senha

        Label:
            text:'Fa√ßa o seu cadastro'
            markup:True
            pos_hint:{'center_x':.5,'center_y':.34}
            color:1,1,1,1
            id:warning
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'40dp'
            pos_hint:{'center_x':.5,'center_y':.2}
            ripple_behavior:True
            md_bg_color:0.16, 0.50, 0.73,1
            radius:20,5,20,5
            on_release:root.creat_bill()
            Label:
                bold:True
                font_size:'25dp'
                text:'Criar'
            Label:
                size_hint_y:None
                height:'10dp'
                font_size:'10dp'
                text:'Conta'
        MDIconButton:
            icon:'arrow-left-top'
            on_release:app.root.current = 'loginmanager'