

<CreatProfile>:
    canvas:
        Color:
            rgba:1,1,1,.4
        Rectangle:
            pos:root.pos
            size:root.size
            source:'images/degrade.jpg'
    FloatLayout:
        Image:
            size_hint_y:None
            height:'230dp'
            source:'images/barbershop.png'
            pos_hint:{'center_x':.5,'center_y':.85}
        Label:
            size_hint_y:None
            height:'5dp'
            bold:True
            font_size:'25sp'
            color:1,0,0,1
            pos_hint:{'center_x':.5,'top':.73}
            id:enter_as_socio
        MDBoxLayout:
            size_hint:.8,None
            height:'220dp'
            orientation:'vertical'
            spacing:'10dp'
            pos_hint:{'center_x':.5, 'center_y':.5}
            MDLabel:
                size_hint_y:None
                height:'15dp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'Nome'
            MDTextFieldRect:
                size_hint_y:None
                height:'40dp'
                font_size:'17sp'
                hint_text:'Nome'
                multiline:False
                id:nome
            MDLabel:
                size_hint_y:None
                height:'15dp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'Email'
            MDTextFieldRect:
                size_hint_y:None
                height:'40dp'
                font_size:'17sp'
                hint_text:'Email'
                multiline:False
                id:email
            MDLabel:
                size_hint_y:None
                height:'15dp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'Senha'
            MDBoxLayout:
                size_hint_y:None
                height:'40dp'
                MDTextFieldRect:
                    font_size:'30sp'
#                    bold:True
                    hint_text:'********'
                    foreground_color:0,0,0,1
                    multiline:False
                    password:True
                    id:senha
                FloatLayout:
                    size_hint_x:None
                    width:0
                    MDIconButton:
                        icon:'eye-off'
                        pos_hint:{'right':.8, 'center_y':.5}
                        id:eye
                        on_release:root.password_view(senha)
            MDLabel:
                size_hint_y:None
                height:'15dp'
                font_size:'15dp'
                color:1,1,1,.5
                text:'Confirmar senha'
            MDBoxLayout:
                size_hint_y:None
                height:'40dp'
                MDTextFieldRect:
                    font_size:'30sp'
#                    bold:True
                    foreground_color:0,0,0,1
                    hint_text:'********'
                    multiline:False
                    password:True
                    id:rep_senha
                FloatLayout:
                    size_hint_x:None
                    width:0
                    MDIconButton:
                        icon:'eye-off'
                        pos_hint:{'right':.8, 'center_y':.5}
                        id:eye_repeat
                        on_release:root.rep_password_view(rep_senha)
        Label:
            font_size:'25dp'
            text:'Fa√ßa o seu cadastro'
            markup:True
            pos_hint:{'center_x':.5,'center_y':.3}
            color:1,1,1,1
            id:warning
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'60dp'
            pos_hint:{'center_x':.5,'center_y':.2}
            ripple_behavior:True
            md_bg_color:0.16, 0.50, 0.73,1
            radius:'20dp','5dp','20dp','5dp'
            padding:'10dp'
            on_release:root.creat_bill()
            Label:
                bold:True
                font_size:'20sp'
                text:'Criar'
            Label:
                size_hint_y:None
                height:'10dp'
                font_size:'13sp'
                text:'Conta'
        MDIconButton:
            icon:'arrow-left'
            on_release:app.root.current = 'loginmanager'