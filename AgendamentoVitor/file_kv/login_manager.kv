
<LoginManager>:
    canvas:
        Color:
            rgba:1,1,1,.7
        Rectangle:
            pos:root.pos
            size:root.size
            source:'images/degrade.jpg'
    FloatLayout:
        MDBoxLayout:
            orientation:'vertical'
            size_hint:.8, None
            height:'150dp'
            pos_hint:{'center_x':.5, 'center_y':.6}
            spacing:'20dp'
            MDLabel:
                font_size:'15dp'
                text:'Email'
                color:1,1,1,.4
            MDTextFieldRect:
                size_hint_y:None
                height:'40dp'
                multiline:False
                hint_text:'Email'
                id:email
            MDLabel:
                font_size:'15dp'
                text:'Senha'
                color:1,1,1,.4
            MDTextFieldRect:
                size_hint_y:None
                height:'40dp'
                font_size:'20dp'
                multiline:False
                bold:True
                hint_text:'******'
                foreground_color:0,1,1,1
                password:True
                id:senha
            Widget:
                size_hint_y:None
                height:'15dp'
            Label:
                font_size:'25dp'
                text:'Fa√ßa o seu cadastro'
                markup:True
                color:1,1,1,1
                id:warning
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'60sp'
            pos_hint:{'center_x':.5,'center_y':.32}
            md_bg_color:0.13, 0.59, 0.95,1
            radius:'20dp','5dp','20dp','5dp'
            padding:'10dp'
            on_release:root.login()
            Label:
                size_hint_y:None
                height:'10dp'
                text:'Faser'
            Label:
                size_hint_y:None
                height:'25dp'
                bold:True
                font_size:'20dp'
                text:'Login'
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'60sp'
            pos_hint:{'center_x':.5,'center_y':.2}
            ripple_behavior:True
            md_bg_color:0.16, 0.50, 0.73,1
            radius:'20dp','5dp','20dp','5dp'
            padding:'10sp'
            on_release:app.root.current = 'creatprofile'
            Label:
                bold:True
                font_size:'25dp'
                text:'Criar'
            Label:
                size_hint_y:None
                height:'10dp'
                font_size:'10dp'
                text:'Conta'

        MDTextButton:
            text:'Redefinir senha!'
            color:1,1,1,.6
            pos_hint:{'right':.9}
            on_release:app.root.current = 'redefinitionsenha'