
<LoginManager>:
    canvas:
        Color:
            rgba:1,1,1,.7
        Rectangle:
            pos:root.pos
            size:root.size
            source:'images/degrade.jpg'
    FloatLayout:
        TextInput:
            size_hint:.8,None
            height:'30dp'
            pos_hint:{'center_x':.5, 'center_y':.6}
            hint_text:'Email'
            multiline:False
            id:email
        TextInput:
            size_hint:.8,None
            height:'30dp'
            pos_hint:{'center_x':.5, 'center_y':.5}
            hint_text:'Senha'
            multiline:False
            id:senha
        Label:
            text:'Fa√ßa o seu cadastro'
            pos_hint:{'center_x':.5,'center_y':.4}
            color:0,0,0,1
            markup:True
            id:warning
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'40dp'
            pos_hint:{'center_x':.5,'center_y':.32}
            md_bg_color:0.13, 0.59, 0.95,1
            radius:20,5,20,5
            on_release:root.login()
            Label:
                size_hint_y:None
                height:'10dp'
                text:'Faser'
            Label:
                size_hint_y:None
                height:'25dp'
                bold:True
                font_size:'20dp'
                text:'Login'
        MDCard:
            orientation:'vertical'
            size_hint:.8,None
            height:'40dp'
            pos_hint:{'center_x':.5,'center_y':.2}
            ripple_behavior:True
            md_bg_color:0.16, 0.50, 0.73,1
            radius:20,5,20,5
            on_release:app.root.current = 'creatprofile'
            Label:
                bold:True
                font_size:'25dp'
                text:'Criar'
            Label:
                size_hint_y:None
                height:'10dp'
                font_size:'10dp'
                text:'Conta'
