<HoursSchedule>:
    ScrollView
        MDBoxLayout:
            size_hint_y:None
            height:self.minimum_height
            spacing:'20dp'
            orientation:'vertical'
            md_bg_color:0.53, 0.54, 0.56, 1
            MDCard:
                size_hint_y:None
                height:'60dp'
                md_bg_color:0,1,1,1
                MDIconButton:
                    icon:'arrow-left-thick'
                    theme_icon_color: "Custom"
                    color:1,0,0,1
                    on_release:app.root.current = 'viewshedule'
                MDLabel:
                    font_size:'30dp'
                    halign:'center'
                    color:0,0,0,1
                    bold:True
                    id:hours
            MDBoxLayout:
                size_hint:.7,None
                height:'20dp'
                pos_hint:{'center_x':.5}
                MDLabel:
                    markup:True
                    text:'Escolha\nOs tipos de serviços'
                    bold:True
                    color:1,1,1,1
#                font_size:'30dp'
            MDSeparator:

            MDCard:
                size_hint:.8,None
                height:'100dp'
#                md_bg_color:0.78, 0.80, 0.83,1
                md_bg_color:1,1,1,1
                radius:8,8,8,8
                pos_hint:{'center_x':.5}
                MDCard:
                    orientation:'vertical'
                    size_hint:None,None
                    width:self.parent.width - 10
                    height:self.parent.height - 10
                    radius:8,8,8,8
                    md_bg_color:1,1,1,1
                    halign:'center'
                    pos_hint:{'center_x':.5,'center_y':.5}
                    MDBoxLayout:
                        size_hint_y:None
                        height:'10dp'
                        MDLabel:
                            size_hint_x:.40
                            font_size:'10dp'
                            bold:True
                            color:1,0,0,.6
                            text:'Serviços'
                        MDLabel:
                            size_hint_x:.40
                            font_size:'10dp'
                            bold:True
                            text:'Tempo'
                            color:1,0,0,.6
                        MDLabel:
                            size_hint_x:.20
                            font_size:'10dp'
                            bold:True
                            text:'ValorR$'
                            color:1,0,0,.6
                    MDBoxLayout:
                        ScrollView:
                    # Receive my_box_categorie ######################
                            MDBoxLayout:
                                orientation:'vertical'
                                size_hint_y:None
                                height:self.minimum_height
                                spacing:'5dp'
                                padding:'3dp'
                                id:categorie

            MDBoxLayout:
                orientation:'vertical'
                size_hint:.8,None
                height:'130dp'
                pos_hint:{'center_x':.5}
                MDLabel:
                    size_hint_y:None
                    height:'20dp'
                    text:'Serviços escolhidos!'
                MDCard:
                    md_bg_color:0.78, 0.80, 0.83,1
                    radius:8,8,8,8
                    pos_hint:{'center_x':.5}
                    MDCard:
                        orientation:'vertical'
                        size_hint:None,None
                        width:self.parent.width - 10
                        height:self.parent.height - 10
                        radius:8,8,8,8
                        halign:'center'
                        pos_hint:{'center_x':.5,'center_y':.5}
                        MDBoxLayout:
                            size_hint_y:None
                            height:'10dp'
                            md_bg_color:1,1,1,.3
                            MDLabel:
                                size_hint_x:.40
                                font_size:'10dp'
                                bold:True
                                color:0,0,0,.6
                                text:'Serviços'
                            MDLabel:
                                size_hint_x:.40
                                font_size:'10dp'
                                bold:True
                                text:'Tempo'
                                color:0,0,0,.6
                            MDLabel:
                                size_hint_x:.20
                                font_size:'10dp'
                                bold:True
                                text:'ValorR$'
                                color:0,0,0,.6
                        MDBoxLayout:
                            md_bg_color:1,1,1,.3
                            ScrollView:
                                MDBoxLayout:
                                    orientation:'vertical'
                                    size_hint_y:None
                                    height:self.minimum_height
                                    spacing:'5dp'
                                    padding:'3dp'
                                    id:work_select
            MDBoxLayout:
                orientation:'vertical'
                size_hint:.7,None
                height:'85dp'
                padding:'10dp',0,0,0
                pos_hint:{'center_x':.5}
                spacing:'5dp'
                radius:8,8,8,8
                MDCard:
                    orientation:'vertical'
                    padding:'10dp',0,0,0
                    pos_hint:{'center_x':.5}
                    radius:8,8,8,8
                    MDBoxLayout:
                        MDLabel:
                            text:'tempo'
                            font_size:'11dp'
                            color:0.13, 0.53, 0.95,.5
                        MDLabel:
                            text:'Valor R$'
                            font_size:'11dp'
                            color:0.13, 0.53, 0.95,.5
                    MDBoxLayout:
                        MDLabel:
                            color:0.13, 0.53, 0.95,1
                            id:time
                        MDLabel:
                            color:0.13, 0.53, 0.95,1
                            id:valor
                MDCard:
                    orientation:'vertical'
                    size_hint_y:None
                    height:'30dp'
                    radius:8,8,8,8
                    md_bg_color:0.13, 0.53, 0.95,1
                    ripple_behavior:True
#                    disabled:True
                    id:card_save

                # on_release is being used in "hours_limit" method
#                    on_release:root.save_scheduleing()
                    MDLabel:
                        text:'Salvar'
                        color:0,0,0,.7
                        font_size:'9dp'
                        bold:True
                        halign:'center'
                    MDLabel:
                        text:'Agendamento'
                        bold:True
                        halign:'center'
            MDSeparator:

            MDBoxLayout:
                size_hint_y:None
                height:'70dp'