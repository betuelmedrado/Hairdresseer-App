<Manager>:
    LoginManager:
        name:'loginmanager'
    CreatProfile
        name:'creatprofile'
    HomePage:
        name:'homepage'
    ClientBlocked:
        name:'clientblocked'
    ManagerProfile:
        name:'managerprofile'
    ScreenChoiceSchedule:
        name:'screenchoiceschedule'
    ViewSchedule:
        name:'viewshedule'
    HoursSchedule:
        name:'hoursschedule'
    InfoScheduleClient:
        name:'infoscheduleclient'

<HomePage>:
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            title:'Home Page'
            left_action_items:[['account-arrow-left-outline',lambda x:root.return_login()]]
            right_action_items:[['menu', lambda x:nav_drawer.set_state('open')]]


        FloatLayout:

            MDBoxLayout:
                size_hint:None,None
                width:'250dp'
                height:'150dp'
                spacing:'5dp'
                pos_hint:{'center_x':.5,'center_y':.5}
                MDCard:
                    orientation:'vertical'
                    md_bg_color:0.78, 0.80, 0.83,1
                    radius:8,8,8,8
                    elevation:'7dp'
                    ripple_behavior:True
                    on_release:app.root.current = 'managerprofile'
                    Image:
                        source:'images/profile.jpg'
                    Label:
                        color:0,0,0,1
                        markup:True
                        text:'[size=17][b]gerenciar[/b][/size]\n[color=#D40A00][size=40][b]Perfil[/b][/size][/color]'
                MDCard:
                    orientation:'vertical'
                    md_bg_color:0.78, 0.80, 0.83,1
                    radius:8,8,8,8
                    elevation:'7dp'
                    ripple_behavior:True
                    on_release:app.root.current = 'screenchoiceschedule'
                    Image:
                        source:'images/agenda.png'
                    Label:
                        color:0,0,0,1
                        markup:True
                        text:'[size=20][b]Ver[/b][/size]\n[color=#D40A00][size=40][b]Agenda[/b][/size][/color]'
        MDBoxLayout:
            size_hint_y:None
            height:'40dp'
            MDLabel:
                size_hint_x:None
                width:'40dp'
                text:'Local:'
                color:0,0,0,.5
            MDLabel:
                font_size:'11dp'
                id:rua

            MDLabel:
                size_hint_x:None
                width:'30dp'
                text:'NÂ°:'
                color:0,0,0,.5
            MDLabel:
                size_hint_x:None
                width:'50dp'
                font_size:'11dp'
                id:num

    MDNavigationDrawer:
        id: nav_drawer
        MDBoxLayout:
            orientation:'vertical'
            spacing:'15dp'
            padding:('15dp',0,'5dp',0)
            Image:
                source:'images/person.png'
            MDSeparator:
            MDBoxLayout:
                size_hint_y:None
                height:'30dp'
                Image:
                    size_hint_x:None
                    height:'20dp'
                    source:'images/block.png'
                MyButtonCard:
                    first_text:'Clientes'
                    secound_text:'Bloqueado'
                    on_release:app.root.current = 'clientblocked'
            MDSeparator:
            Widget:


<ViewSchedule>:
    canvas:
        Rectangle:
            size:root.size
            pos:root.pos
            source:'images/wallp_schedule.jpg'
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            elevation:10
            id:title_toobar
            right_action_items:[['refresh',lambda x: root.actualizar()],['menu', lambda x:nav_drawer.set_state('open')]]
            left_action_items:[['arrow-left-bold-outline', lambda x: root.return_schoice_schedule()]]
        MDBoxLayout:
            size_hint:1,.7
            md_bg_color:0,0,0,.4
            pos_hint:{'center_x':.5}
            ScrollView:
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:self.minimum_height
                    spacing:'11dp'
                    padding:'11dp'
                    id:grid_shedule

    MDNavigationDrawer:
        id: nav_drawer
        MDBoxLayout:
            orientation:'vertical'
            spacing:'15dp'
            padding:('15dp',0,'5dp',0)
            Image:
                source:'images/person.png'
            MDSeparator:
            MDBoxLayout:
                size_hint_y:None
                height:'30dp'
                Image:
                    size_hint_x:None
                    height:'20dp'
                    source:'images/block.png'
                MyButtonCard:
                    first_text:'Clientes'
                    secound_text:'Bloqueado'
                    on_release:app.root.current = 'clientblocked'
            MDSeparator:
            Widget: