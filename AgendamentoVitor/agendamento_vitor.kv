
#:include file_kv/login_manager.kv
#:include file_kv/manager_profile.kv
#:include file_kv/creat_profile.kv
#:include module_screen/table_schedule_m.kv
#:include module_screen/card_button_proficional.kv
#:include module_screen/my_box_categorie.kv
#:include module_screen/my_button_card.kv
#:include module_screen/table_schedule_m.kv
#:include module_screen/popup_widget.kv

<Manager>:
    LoginManager:
        name:'loginmanager'
    CreatProfile
        name:'creatprofile'
    HomePage:
        name:'homepage'
    ManagerProfile:
        name:'managerprofile'
    ScreenChoiceSchedule:
        name:'screenchoiceschedule'
    ViewSchedule:
        name:'viewshedule'

<HomePage>:
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            title:'Home Page'
            left_action_items:[['account-arrow-left-outline',lambda x:root.return_login()]]
        FloatLayout:
            MDBoxLayout:
                size_hint:None,None
                width:'250dp'
                height:'150dp'
                spacing:'5dp'
                pos_hint:{'center_x':.5,'center_y':.5}
                MDCard:
                    orientation:'vertical'
                    md_bg_color:0.78, 0.80, 0.83,1
                    radius:8,8,8,8
                    elevation:'7dp'
                    ripple_behavior:True
                    on_release:app.root.current = 'managerprofile'
                    Image:
                        source:'images/profile.jpg'
                    Label:
                        color:0,0,0,1
                        markup:True
                        text:'[size=17][b]gerenciar[/b][/size]\n[color=#D40A00][size=40][b]Perfil[/b][/size][/color]'
                MDCard:
                    orientation:'vertical'
                    md_bg_color:0.78, 0.80, 0.83,1
                    radius:8,8,8,8
                    elevation:'7dp'
                    ripple_behavior:True
                    on_release:app.root.current = 'screenchoiceschedule'
                    Image:
                        source:'images/agenda.png'
                    Label:
                        color:0,0,0,1
                        markup:True
                        text:'[size=20][b]Ver[/b][/size]\n[color=#D40A00][size=40][b]Agenda[/b][/size][/color]'

<ViewSchedule>:
    canvas:
        Rectangle:
            size:root.size
            pos:root.pos
            source:'images/wallp_schedule.jpg'
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            elevation:10
            id:title_toobar
            right_action_items:[['refresh',lambda x: root.actualizar()]]
            left_action_items:[['arrow-left-bold-outline', lambda x: root.return_schoice_schedule()]]
        MDBoxLayout:
            size_hint:1,.7
            md_bg_color:0,0,0,.4
            pos_hint:{'center_x':.5}
            ScrollView:
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:None
                    height:self.minimum_height
                    spacing:'11dp'
                    padding:'11dp'
                    id:grid_shedule