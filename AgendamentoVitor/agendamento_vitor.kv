<HomePage>:
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            title:'Home Page'
            left_action_items:[['account-arrow-left-outline',lambda x:root.return_login()]]
            right_action_items:[['menu', lambda x: nav_drawer.set_state('open')]]


        FloatLayout:

            MDBoxLayout:
                size_hint:None,None
                width:'350dp'
                height:'250dp'
                spacing:'5dp'
                pos_hint:{'center_x':.5,'center_y':.5}
                MDCard:
                    orientation:'vertical'
                    md_bg_color:0.78, 0.80, 0.83,1
                    radius:8,8,8,8
                    elevation:'7dp'
                    ripple_behavior:True
                    on_release:app.root.current = 'managerprofile'
                    Image:
                        source:'images/profile.jpg'
                    MDBoxLayout:
                        orientation:'vertical'
                        size_hint:.8,None
                        height:'50dp'
                        padding:'10dp'
                        spacing:'5dp'
                        pos_hint:{'center_x':.5}
                        MDLabel:
                            size_hint_y:None
                            height:'25dp'
                            font_size:'17sp'
                            color:0,0,0,1
                            bold:True
                            text:'gerenciar'
                            pos_hint:{'x':.1}
                        Label:
                            size_hint_y:None
                            height:'25dp'
                            font_size:'40sp'
                            color:1,0,0,1
                            bold:True
                            text:'Salão'
                MDCard:
                    orientation:'vertical'
                    md_bg_color:0.78, 0.80, 0.83,1
                    radius:8,8,8,8
                    elevation:'7dp'
                    ripple_behavior:True
                    on_release:app.root.current = 'screenchoiceschedule'
                    on_press: app.root.transition = RiseInTransition()

#                    on_press: app.root.transition = SlideTransition(direction="up")
                    Image:
                        source:'images/agenda.png'
                    MDBoxLayout:
                        orientation:'vertical'
                        size_hint:.8,None
                        height:'50dp'
                        padding:'10dp'
                        spacing:'5dp'
                        pos_hint:{'center_x':.5}
                        MDLabel:
                            size_hint_y:None
                            height:'25dp'
                            font_size:'17sp'
                            color:0,0,0,1
                            bold:True
                            text:'Ver'
                        Label:
                            size_hint_y:None
                            height:'25dp'
                            font_size:'40sp'
                            color:1,0,0,1
                            bold:True
                            text:'Agenda'

        MDBoxLayout:
            size_hint_y:None
            height:'40dp'
            MDLabel:
                size_hint_x:None
                width:'50dp'
                text:'Local:'
                color:0,0,0,.5
            MDLabel:
                font_size:'11dp'
                id:rua

            MDLabel:
                size_hint_x:None
                width:'30dp'
                text:'N°:'
                color:0,0,0,.5
            MDLabel:
                size_hint_x:None
                width:'50dp'
                font_size:'11dp'
                id:num

    MDNavigationDrawer:
        orientation:"vertical"
        id: nav_drawer
        state:'close'
        MDBoxLayout:
            orientation:'vertical'
            size_hint_y:None
            height:'250dp'
            md_bg_color:0,0,0,.2
            FloatLayout:
                Image:
                    source:'images/barbershop.png'
                    pos_hint:{'center_x':.5, 'center_y':.5}
                MDLabel:
                    font_size:'30sp'
                    bold:True
                    text:'BarberShop'
                    outline_width:'3dp'
                    outline_color:1,1,1,1
                    pos_hint:{'x':.05, 'center_y':.1}
                MDLabel:
                    font_size:'30sp'
                    bold:True
                    text:'299'
                    outline_width:'3dp'
                    outline_color:1,1,1,1
                    pos_hint:{'x':.8, 'center_y':.1}
        MDBoxLayout:
            orientation:'vertical'
            spacing:'15dp'
            padding:('10dp',0,'5dp',0)
            MDSeparator:
                md_bg_color:0.53, 0.54, 0.56,1
            MDBoxLayout:
                size_hint_y:None
                height:'60dp'
                Image:
                    size_hint_x:None
                    height:'20dp'
                    source:'images/block.png'
                MyButtonCard:
                    first_text:'Clientes'
                    secound_text:'Bloqueado'
                    on_release:app.root.current = 'clientblocked'
            MDSeparator:
                md_bg_color:0.53, 0.54, 0.56,1

            MDCard:
                size_hint_y:None
                height:'60dp'
                padding:('20dp',0,0,0)
                ripple_behavior:True
                MDIcon:
                    size_hint_x:None
                    width:'60dp'
                    icon_size:'200dp'
                    icon:'cash-register'
                MDLabel:
                    text:'Registro de caixa'
                    font_size:'25sp'
                    bold:True
            Widget:


